{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://localhost/dataprocessing/server/api/v1/schemas/draft-07/getTopWatchedAnime.json",
    "title": "Anime",
    "description": "Information about an Anime",
    "type": "array",
    "minItems": 1,
    "items": {
        "type": "object",
        "properties": {
            "animeId": {
                "type": "integer"
            },
            "name": {
                "type": "string"
            },
            "genre": {
                "type": "string"
            },
            "type": {
                "type": "string"
            },
            "views": {
                "type": "integer"
            },
            "episodes": {
                "type": "integer"
            },
            "rating": {
                "type": "string"
            }
        },
        "required": ["animeId","name"]
    }
}

